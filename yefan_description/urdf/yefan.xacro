        <link name="link1">
            <inertial>
                <mass value="550"/>
                <origin xyz="0 0 0"/>
                <inertia ixx="0.0" ixy="0.0" ixz="0.0"
                         iyy="0.0" iyz="0.0"
                         izz="0.0"/>
            </inertial>
            <collision>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <mesh filename="package://yefan_description/meshes/J1.STL"/>
                </geometry>
            </collision>
            <visual>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <mesh filename="package://yefan_description/meshes/J1.STL"/>
                </geometry>
            </visual>
        </link>

        <link name="link2">
